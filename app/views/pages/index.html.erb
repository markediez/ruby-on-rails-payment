<section id="payment-form" class="payment-form-section">
	<div class="container">
		<div class="row">
			<div class="col-md-3"></div>
			<form class="col-md-6">
				<label>
				<input name="cardholder-name" class="field is-empty" onblur="isTheFieldEmpty(this, document.getElementById('name_help'))" placeholder="Jane Doe" />
				<span><span>Name</span></span>
				</label>
				<label>
					<input class="field is-empty" type="tel" placeholder="(123) 456-7890" onblur="isPhoneOk(this, document.getElementById('phone_help'))" />
					<span><span>Phone</span></span>
				</label>
				<label>
					<input class="field is-empty" placeholder="info@flagupmail.com" onblur="isEmailOk(this, document.getElementById('email_help'))"/>
					<span><span>Email</span></span>
				</label>
				<label>
					<div id="card-element" class="field is-empty"></div>
					<span><span>Card</span></span>
				</label>
				<button type="submit">Pay $7.99</button>
				<div class="outcome">
					<div class="error" id="email_help"></div>
					<div class="success" id="email_help">
						Success! Your Stripe token is <span class="token"></span>
					</div>
				</div>
			</form>	
			<div class="col-md-3"></div>
		</div>
	</div>
</section>

